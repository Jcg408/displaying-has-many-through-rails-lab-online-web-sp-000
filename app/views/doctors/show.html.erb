<h1>Dr. <%= @doctor.name%> </h1>
<h2>Department: <%= @doctor.department%></h2>
<h3>Appointment List</h3>

<ul>
    <% @doctor.appointments.each do |appt|%>
        <li>
            <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M")%> for <%= link_to appt.patient.name, patient_path(appt.patient) %>
        </li>
    <%end%>
    
</ul>



    
    

    
    

